
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="auth">
    <div class="auth_left">
        <div class="card">
            <div class="card-body">

                <div class="card-title">Giriş</div>

                <form action="~/Account/Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="form-label">Kullanıcı Kodu</label>
                        <input type="text" maxlength="5" class="form-control" id="Username" name="Username" placeholder="Kullanıcı Kodu">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Şifre</label>
                        <input type="password" maxlength="50" class="form-control" id="Password" name="Password" placeholder="Şifre">
                    </div>
                    @if(ViewBag.Warning != null){
                        <p class="text-danger">@ViewBag.Warning</p>
                    }
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-block" title="">Giriş</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
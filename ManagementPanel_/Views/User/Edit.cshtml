
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-body">
    <div class="container-fluid">
        <div class="row mt-30" style="min-height:565px">
            <div class="col-md-12">
                <div class="card" style="min-height:330px">
                    <div class="card-header" style="background-color:white;">
                        <h4>Kullanıcı Ekle</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="hidden" id="ID">
                                <div class="form-group">
                                    <label class="col-md-4 text-right ml-20">Kullanıcı Kodu: </label>
                                    <div class="col-md-6 input-group">
                                        <input type="text" class="form-control" id="Username" maxlength="5" required>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-4 text-right ml-20">Ad: </label>
                                    <div class="col-md-6 input-group">
                                        <input type="text" class="form-control" id="Name" maxlength="50" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 text-right ml-20">Soyad: </label>
                                    <div class="col-md-6 input-group">
                                        <input type="text" class="form-control" id="Surname" maxlength="50" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 text-right ml-20"> Şifre:  </label>
                                    <div class="col-md-6 input-group">
                                        <input type="password" class="form-control" id="Password" maxlength="50" required>
                                    </div>
                                    <div class="col-md-4"></div>
                                    <div class="col-md-6 input-group">
                                        &emsp;&ensp; <input type="checkbox" onclick="passwordShowHide()">&ensp; Şifreyi Göster
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">


                                <div class="form-group">
                                    <label class="col-md-4 text-right">Email: </label>
                                    <div class="col-md-8 input-group">
                                        <input type="email" class="form-control" id="Email" maxlength="50" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 text-right">Telefon Num: </label>
                                    <div class="col-md-8 input-group">
                                        <input type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control" id="Phone" maxlength="10" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 text-right">Doğum Tarihi: </label>
                                    <div class="col-md-8 input-group">
                                        <input type="date" class="form-control" id="Date" required>
                                    </div>
                                </div>

                            </div>
                        </div>


                    </div>

                    <div class="card-footer">

                        <div class="row">
                            <div class="col-lg-2 col-md-4 col-sm-6">
                                <button href="javascript:void(0);" class="btn btn-info btn-block" onclick="Control()">Kaydet</button>
                            </div>
                            <div class="col-md-8"></div>
                            <div class="col-lg-2 col-md-4 col-sm-6">
                                <button href="javascript:void(0);" class="btn btn-danger btn-block" title="">İptal</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/UserEdit.js"></script>
}
